# ContractGuard AI - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# GOOGLE AI CONFIGURATION (Required)
# =============================================================================
# Get your API key from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# Gemini Model Configuration
GEMINI_MODEL=gemini-2.5-flash
GEMINI_EMBEDDING_MODEL=text-embedding-004

# Google Custom Search (Optional - for built-in search tool)
GOOGLE_SEARCH_ENGINE_ID=

# =============================================================================
# VECTOR DATABASE CONFIGURATION (Weaviate)
# =============================================================================
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=

# =============================================================================
# OBJECT STORAGE (MinIO)
# =============================================================================
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false
MINIO_BUCKET=contracts

# =============================================================================
# REDIS (Sessions, Caching, Pub/Sub)
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# POSTGRESQL (User Management & Document Metadata)
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=contractguard
# Or use full URL:
# DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/contractguard

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_NAME=ContractGuard AI
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Security (Change in production!)
SECRET_KEY=change-this-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# A2A PROTOCOL CONFIGURATION
# =============================================================================
A2A_ENABLED=true
# A2A_SERVER_URL is auto-generated if not specified

# =============================================================================
# MCP CONFIGURATION
# =============================================================================
MCP_FILESYSTEM_ENABLED=false
MCP_FILESYSTEM_ROOT=/app/data

# =============================================================================
# OBSERVABILITY (Optional)
# =============================================================================
# OpenTelemetry Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=contractguard-ai
ENABLE_TRACING=true

# =============================================================================
# DEPLOYMENT (Optional - for Cloud Run)
# =============================================================================
GCP_PROJECT_ID=your_project_id
GCP_REGION=us-central1
CLOUD_RUN_SERVICE_NAME=contractguard-ai
